<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="450dp"
    android:layout_marginHorizontal="20dp"
    app:cardCornerRadius="20dp"
    app:cardElevation="0dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:scaleType="fitXY"
            android:src="@drawable/background_alert"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/img_alert"
            android:layout_width="185dp"
            android:layout_height="185dp"
            android:layout_marginTop="40dp"
            android:src="@drawable/alert_success"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/title_alert"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:fontFamily="@font/plus_jakarta_sans_bold"
            android:letterSpacing="-0.03"
            android:text="Yeiy!"
            android:textColor="@color/primaryColor"
            android:textSize="23sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/img_alert" />

        <TextView
            android:id="@+id/desc_alert"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/plus_jakarta_sans_regular"
            android:letterSpacing="-0.03"
            android:text="Proses login berhasil"
            android:textAlignment="center"
            android:textColor="@color/blackText"
            android:textSize="23sp"
            app:layout_constraintEnd_toEndOf="@id/img_alert"
            app:layout_constraintStart_toStartOf="@id/img_alert"
            app:layout_constraintTop_toBottomOf="@id/title_alert" />

        <Button
            android:id="@+id/btnClose"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_marginHorizontal="55dp"
            android:layout_marginBottom="40dp"
            android:fontFamily="@font/plus_jakarta_sans_bold"
            android:text="Tutup"
            android:layout_marginTop="40dp"
            app:layout_constraintTop_toBottomOf="@+id/desc_alert"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.cardview.widget.CardView>