<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:fillViewport="true"
    android:background="@color/backgroundScreen"
    tools:context=".ui.foster.form.care.ReviewCareFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="50dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <TextView
                android:id="@+id/txtNeedVaccine"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="40dp"
                android:layout_marginEnd="40dp"
                android:fontFamily="@font/plus_jakarta_sans_semibold"
                android:textSize="16sp"
                android:textColor="@color/blackText"
                android:text="Apakah Anda bersedia untuk memenuhi kebutuhan vaksinasi lengkap yang dilakukan rutin per tahun?" />

            <TextView
                android:id="@+id/needVaccine"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginStart="40dp"
                android:layout_marginEnd="40dp"
                android:fontFamily="@font/plus_jakarta_sans_medium"
                android:textColor="@color/blackText"
                android:text="Siap selalu, karena saya peduli dengan hewan peliharaan" />

            <View
                android:id="@+id/line"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#E0E0E0"
                android:layout_marginTop="25dp"
                android:layout_marginHorizontal="40dp" />

            <TextView
                android:id="@+id/txtMedicine"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:layout_marginStart="40dp"
                android:layout_marginEnd="40dp"
                android:fontFamily="@font/plus_jakarta_sans_semibold"
                android:textSize="16sp"
                android:textColor="@color/blackText"
                android:text="Apakah kamu bersedia &amp; mampu mem-berikan obat cacing &amp; kutu rutin 1-3 bulan sekali ?" />

            <TextView
                android:id="@+id/medicine"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginStart="40dp"
                android:layout_marginEnd="40dp"
                android:fontFamily="@font/plus_jakarta_sans_regular"
                android:textColor="@color/blackText"
                android:text="Saya siap karema itu bentuk dari saya peduli kepada hewan peliharaan" />


            <View
                android:id="@+id/line1"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#E0E0E0"
                android:layout_marginTop="25dp"
                android:layout_marginHorizontal="40dp" />

            <TextView
                android:id="@+id/txtPrivacy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:layout_marginStart="40dp"
                android:layout_marginEnd="40dp"
                android:fontFamily="@font/plus_jakarta_sans_semibold"
                android:textSize="16sp"
                android:textColor="@color/blackText"
                android:text="Apakah Anda bersedia memenuhi ketentuan untuk pro-steril?" />

            <TextView
                android:id="@+id/privacy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginStart="40dp"
                android:layout_marginEnd="40dp"
                android:fontFamily="@font/plus_jakarta_sans_regular"
                android:textColor="@color/blackText"
                android:text="Ya" />

            <View
                android:id="@+id/line2"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#E0E0E0"
                android:layout_marginTop="25dp"
                android:layout_marginHorizontal="40dp" />

            <TextView
                android:id="@+id/txtMove"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:layout_marginStart="40dp"
                android:layout_marginEnd="40dp"
                android:fontFamily="@font/plus_jakarta_sans_semibold"
                android:textSize="16sp"
                android:textColor="@color/blackText"
                android:text="Apa yang akan Anda lakukan terhadap kucing yang Anda adopsi, jika Anda harus pindah kota/ liburan/perjalanan dinas?" />

            <TextView
                android:id="@+id/move"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginStart="40dp"
                android:fontFamily="@font/plus_jakarta_sans_regular"
                android:textColor="@color/blackText"
                android:lineSpacingExtra="3dp"
                android:layout_marginEnd="40dp"
                android:text="Saya akan menitipkan ke shelter terdekat atau ke tetangga yang memang mempunyai hewan peliharaan yang sama " />

            <View
                android:id="@+id/line3"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#E0E0E0"
                android:layout_marginTop="25dp"
                android:layout_marginHorizontal="40dp" />

            <TextView
                android:id="@+id/txtCall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:layout_marginStart="40dp"
                android:layout_marginEnd="40dp"
                android:fontFamily="@font/plus_jakarta_sans_semibold"
                android:textSize="16sp"
                android:textColor="@color/blackText"
                android:text="Apakah Anda bersedia untuk kami hubungi sewaktu-waktu, untuk menanyakan kabar dan informasi terbaru terkait kucing yang akan diadopsi?" />

            <TextView
                android:id="@+id/call"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginStart="40dp"
                android:fontFamily="@font/plus_jakarta_sans_regular"
                android:textColor="@color/blackText"
                android:lineSpacingExtra="3dp"
                android:layout_marginEnd="40dp"
                android:text="Ya" />

            <View
                android:id="@+id/line4"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#E0E0E0"
                android:layout_marginTop="25dp"
                android:layout_marginHorizontal="40dp" />

            <TextView
                android:id="@+id/txtTools"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:layout_marginStart="40dp"
                android:layout_marginEnd="40dp"
                android:fontFamily="@font/plus_jakarta_sans_semibold"
                android:textSize="16sp"
                android:textColor="@color/blackText"
                android:text="Perlengkapan perawatan hewan kucing yang sudah Anda dimiliki:" />

            <TextView
                android:id="@+id/tools"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginStart="40dp"
                android:fontFamily="@font/plus_jakarta_sans_regular"
                android:textColor="@color/blackText"
                android:lineSpacingExtra="3dp"
                android:layout_marginEnd="40dp"
                android:text="Pet Cargo, Mainan kucing, Perlengkapan mandi(Shampoo, Sisir, dll)." />

            <View
                android:id="@+id/line5"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#E0E0E0"
                android:layout_marginTop="25dp"
                android:layout_marginHorizontal="40dp" />

            <TextView
                android:id="@+id/txtResidence"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:layout_marginStart="40dp"
                android:layout_marginEnd="40dp"
                android:fontFamily="@font/plus_jakarta_sans_semibold"
                android:textSize="16sp"
                android:textColor="@color/blackText"
                android:text="Bentuk tempat tinggal Anda:" />

            <TextView
                android:id="@+id/residence"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginStart="40dp"
                android:fontFamily="@font/plus_jakarta_sans_regular"
                android:textColor="@color/blackText"
                android:lineSpacingExtra="3dp"
                android:layout_marginEnd="40dp"
                android:text="Rumah Pribadi" />

            <View
                android:id="@+id/line6"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#E0E0E0"
                android:layout_marginTop="25dp"
                android:layout_marginHorizontal="40dp" />

            <TextView
                android:id="@+id/txtPlaced"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:layout_marginStart="40dp"
                android:layout_marginEnd="40dp"
                android:fontFamily="@font/plus_jakarta_sans_semibold"
                android:textSize="16sp"
                android:textColor="@color/blackText"
                android:text="Dimanakah kucing yang akan Anda adopsi ditempatkan nantinya?" />

            <TextView
                android:id="@+id/placed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginStart="40dp"
                android:fontFamily="@font/plus_jakarta_sans_regular"
                android:textColor="@color/blackText"
                android:lineSpacingExtra="3dp"
                android:layout_marginEnd="40dp"
                android:text="Semioutdoor" />

            <View
                android:id="@+id/line7"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#E0E0E0"
                android:layout_marginTop="25dp"
                android:layout_marginHorizontal="40dp" />

            <TextView
                android:id="@+id/txtStay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:layout_marginStart="40dp"
                android:layout_marginEnd="40dp"
                android:fontFamily="@font/plus_jakarta_sans_semibold"
                android:textSize="16sp"
                android:textColor="@color/blackText"
                android:text="Dimanakah kucing yang akan Anda adopsi ditempatkan nantinya?" />

            <TextView
                android:id="@+id/stay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginStart="40dp"
                android:fontFamily="@font/plus_jakarta_sans_regular"
                android:textColor="@color/blackText"
                android:lineSpacingExtra="3dp"
                android:layout_marginEnd="40dp"
                android:text="Ruangan Kucing (Cat Room)" />

            <View
                android:id="@+id/line8"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#E0E0E0"
                android:layout_marginTop="25dp"
                android:layout_marginHorizontal="40dp" />

            <TextView
                android:id="@+id/txtEnvironment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:layout_marginStart="40dp"
                android:layout_marginEnd="40dp"
                android:fontFamily="@font/plus_jakarta_sans_semibold"
                android:textSize="16sp"
                android:textColor="@color/blackText"
                android:text="Apakah di lingkungan anda (radius 500m dari rumah anda) ada yang memelihara hewan peliharaan?" />

            <TextView
                android:id="@+id/environment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginStart="40dp"
                android:fontFamily="@font/plus_jakarta_sans_regular"
                android:textColor="@color/blackText"
                android:lineSpacingExtra="3dp"
                android:layout_marginEnd="40dp"
                android:text="Iya, terdapat hewan kucing juga dan terdapat beberapa anjing" />

            <View
                android:id="@+id/line9"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#E0E0E0"
                android:layout_marginTop="25dp"
                android:layout_marginHorizontal="40dp" />

            <TextView
                android:id="@+id/txtCondition"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:layout_marginStart="40dp"
                android:layout_marginEnd="40dp"
                android:fontFamily="@font/plus_jakarta_sans_semibold"
                android:textSize="16sp"
                android:textColor="@color/blackText"
                android:text="Foto/video kondisi tempat tinggal, min. 5 foto/1 video" />

            <TextView
                android:id="@+id/condition"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginStart="40dp"
                android:fontFamily="@font/plus_jakarta_sans_regular"
                android:textColor="@color/blackText"
                android:lineSpacingExtra="3dp"
                android:layout_marginEnd="40dp"
                android:layout_marginBottom="30dp"
                android:text="https://drive.com.adsjasdui" />

        </LinearLayout>

        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:indeterminate="true"
            android:indeterminateTint="@color/primary_color_foster"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:visibility="visible" />
    </androidx.constraintlayout.widget.ConstraintLayout>



</ScrollView>