<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundScreen">

    <TextView
        android:id="@+id/txtRequest"
        android:layout_width="150dp"
        android:layout_height="20dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="35dp"
        android:background="@drawable/skeleton_background"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <View
        android:id="@+id/card_submission_detail"
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:layout_marginHorizontal="30dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/skeleton_background"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtRequest"/>

    <ImageView
        android:id="@+id/side_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:src="@drawable/side_detail"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/card_submission_detail"/>

    <TextView
        android:id="@+id/txtKode"
        android:layout_width="100dp"
        android:layout_height="20dp"
        android:layout_marginStart="25dp"
        android:background="@drawable/skeleton_background"
        app:layout_constraintTop_toTopOf="@id/side_detail"
        app:layout_constraintBottom_toBottomOf="@id/side_detail"
        app:layout_constraintStart_toEndOf="@id/side_detail"/>

    <TextView
        android:id="@+id/request_id"
        android:layout_width="150dp"
        android:layout_height="20dp"
        android:background="@drawable/skeleton_background"
        app:layout_constraintTop_toTopOf="@id/txtKode"
        app:layout_constraintBottom_toBottomOf="@id/txtKode"
        android:fontFamily="@font/plus_jakarta_sans_regular"
        app:layout_constraintEnd_toEndOf="@id/card_submission_detail" />

    <TextView
        android:id="@+id/txtDate"
        android:layout_width="100dp"
        android:layout_height="20dp"
        android:background="@drawable/skeleton_background"
        android:layout_marginTop="25dp"
        app:layout_constraintStart_toStartOf="@id/txtKode"
        app:layout_constraintTop_toBottomOf="@+id/txtKode"/>

    <TextView
        android:id="@+id/date_adopt"
        android:layout_width="130dp"
        android:layout_height="20dp"
        android:background="@drawable/skeleton_background"
        app:layout_constraintTop_toTopOf="@id/txtDate"
        app:layout_constraintBottom_toBottomOf="@id/txtDate"
        app:layout_constraintEnd_toEndOf="@id/card_submission_detail" />

    <View
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#D9D9D9"
        android:layout_marginTop="30dp"
        android:layout_marginHorizontal="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txtDate"/>

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/ic_foster"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/skeleton_background"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/line" />

    <TextView
        android:id="@+id/foster"
        android:layout_width="60dp"
        android:layout_height="20dp"
        android:layout_marginStart="30dp"
        android:background="@drawable/skeleton_background"
        app:layout_constraintTop_toTopOf="@id/ic_foster"
        app:layout_constraintStart_toEndOf="@+id/ic_foster"/>

    <TextView
        android:id="@+id/community_foster"
        android:layout_width="200dp"
        android:layout_height="20dp"
        android:background="@drawable/skeleton_background"
        android:layout_marginTop="3dp"
        app:layout_constraintTop_toBottomOf="@id/foster"
        app:layout_constraintStart_toStartOf="@+id/foster"/>

    <TextView
        android:id="@+id/fosterName"
        android:layout_width="100dp"
        android:layout_height="20dp"
        android:background="@drawable/skeleton_background"
        app:layout_constraintTop_toBottomOf="@id/community_foster"
        app:layout_constraintStart_toStartOf="@+id/foster"/>

    <View
        android:id="@+id/card_detail_foster_view"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_marginTop="30dp"
        android:layout_marginHorizontal="30dp"
       android:background="@drawable/skeleton_background"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/fosterName"/>

    <View
        android:id="@+id/card_upload"
        android:layout_width="match_parent"
        android:layout_height="235dp"
        android:background="@drawable/skeleton_background"
        android:layout_marginTop="30dp"
        android:layout_marginHorizontal="30dp"
        app:layout_constraintStart_toStartOf="@id/card_detail_foster_view"
        app:layout_constraintEnd_toEndOf="@id/card_detail_foster_view"
        app:layout_constraintTop_toBottomOf="@id/card_detail_foster_view"/>


</androidx.constraintlayout.widget.ConstraintLayout>