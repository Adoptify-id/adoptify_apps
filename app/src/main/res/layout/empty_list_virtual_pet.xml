<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/layout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="500dp"
    android:background="@color/backgroundScreen"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/image_empty"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:src="@drawable/empty_list"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/txtTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/plus_jakarta_sans_bold"
        android:textSize="23sp"
        android:textColor="@color/primaryColor"
        android:text="Data tidak ditemukan!"
        app:layout_constraintEnd_toEndOf="@id/image_empty"
        app:layout_constraintStart_toStartOf="@id/image_empty"
        app:layout_constraintTop_toBottomOf="@+id/image_empty"/>

    <TextView
        android:id="@+id/txtDesc"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/plus_jakarta_sans_medium"
        android:textSize="16sp"
        android:textColor="@color/blackText"
        android:textAlignment="center"
        android:layout_marginTop="15dp"
        android:layout_marginHorizontal="25dp"
        android:lineSpacingExtra="3dp"
        android:text="Maaf, data virtual pet Anda tidak tersedia. Coba muat ulang atau periksa kembali nanti."
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtTitle"/>

    <Button
        android:id="@+id/btnClose"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginHorizontal="45dp"
        android:layout_marginBottom="30dp"
        android:fontFamily="@font/plus_jakarta_sans_bold"
        android:text="Tambahkan Data"
        android:layout_marginTop="30dp"
        android:textColor="@color/white"
        android:background="@drawable/background_button_rewards_grey"
        app:layout_constraintTop_toBottomOf="@+id/txtDesc"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>