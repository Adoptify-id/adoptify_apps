<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/background_reward">

    <ImageView
        android:id="@+id/ic_diamond"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:src="@drawable/diamond"
        android:paddingTop="8dp"
        android:paddingBottom="7dp"
        android:paddingStart="6dp"
        android:paddingEnd="5dp"
        android:background="@drawable/background_button_diamond"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/txtPoints"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/dummy_points"
        android:textColor="@color/white"
        android:textSize="28sp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:letterSpacing="-0.05"
        android:fontFamily="@font/plus_jakarta_sans_medium"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/ic_diamond" />

    <TextView
        android:id="@+id/points"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/points"
        android:textColor="#B2FFFFFF"
        android:textSize="12sp"
        android:fontFamily="@font/plus_jakarta_sans_regular"
        app:layout_constraintTop_toBottomOf="@id/txtPoints"
        app:layout_constraintStart_toStartOf="@id/txtPoints" />

    <ImageView
        android:id="@+id/btnReminder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:src="@drawable/ic_reminder"
        android:background="@drawable/background_button_reward"
        android:paddingVertical="15dp"
        android:paddingHorizontal="10dp"
        app:layout_constraintTop_toTopOf="@id/ic_diamond"
        app:layout_constraintBottom_toBottomOf="@id/ic_diamond"
        app:layout_constraintEnd_toEndOf="parent"/>

    <ImageView
        android:id="@+id/btnHistory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:src="@drawable/ic_history"
        android:background="@drawable/background_button_reward"
        android:paddingVertical="15dp"
        android:paddingHorizontal="10dp"
        app:layout_constraintTop_toTopOf="@id/btnReminder"
        app:layout_constraintBottom_toBottomOf="@id/btnReminder"
       app:layout_constraintEnd_toStartOf="@id/btnReminder"/>

</androidx.constraintlayout.widget.ConstraintLayout>