<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingHorizontal="30dp"
    android:paddingVertical="40dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/image_profile"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:background="@drawable/skeleton_background"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/name_profile"
            android:layout_width="101dp"
            android:layout_height="20dp"
            android:layout_marginStart="15dp"
            android:background="@drawable/skeleton_background"
            app:layout_constraintStart_toEndOf="@id/image_profile"
            app:layout_constraintTop_toTopOf="@id/image_profile" />

        <View
            android:id="@+id/location_profile"
            android:layout_width="120dp"
            android:layout_height="20dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/skeleton_background"
            app:layout_constraintStart_toStartOf="@id/name_profile"
            app:layout_constraintTop_toBottomOf="@id/name_profile" />

        <View
            android:id="@+id/virtual_pet"
            android:layout_width="190dp"
            android:layout_height="20dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/skeleton_background"
            app:layout_constraintStart_toStartOf="@id/image_profile"
            app:layout_constraintTop_toBottomOf="@id/image_profile" />

        <View
            android:id="@+id/desc_virtual_pet"
            android:layout_width="220dp"
            android:layout_height="20dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/skeleton_background"
            app:layout_constraintStart_toStartOf="@id/image_profile"
            app:layout_constraintTop_toBottomOf="@id/virtual_pet" />

        <View
            android:id="@+id/item_virtual_pet"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_marginTop="35dp"
            android:background="@drawable/skeleton_background"
            app:layout_constraintStart_toStartOf="@id/desc_virtual_pet"
            app:layout_constraintTop_toBottomOf="@id/desc_virtual_pet" />

        <View
            android:id="@+id/dots"
            android:layout_width="40dp"
            android:layout_height="10dp"
            android:background="@drawable/skeleton_background"
            app:layout_constraintBottom_toBottomOf="@id/btn"
            app:layout_constraintEnd_toEndOf="@id/item_virtual_pet"
            app:layout_constraintStart_toStartOf="@id/item_virtual_pet"
            app:layout_constraintTop_toTopOf="@id/btn" />

        <View
            android:id="@+id/btn"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/skeleton_background"
            app:backgroundTint="#E0E0E0"
            app:layout_constraintEnd_toEndOf="@id/item_virtual_pet"
            app:layout_constraintTop_toBottomOf="@id/item_virtual_pet" />

        <ImageView
            android:id="@+id/btn_medical_record"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginTop="45dp"
            android:background="@drawable/skeleton_background"
            app:layout_constraintStart_toStartOf="@id/desc_virtual_pet"
            app:layout_constraintTop_toBottomOf="@id/btn" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>