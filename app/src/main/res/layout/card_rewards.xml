<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/rewards_img"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginStart="35dp"
        android:src="@drawable/kandang_pet"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/txtRewards"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginStart="30dp"
        android:fontFamily="@font/plus_jakarta_sans_bold"
        android:textSize="16sp"
        android:textColor="#303030"
        android:text="@string/rumah_kucing"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/rewards_img"/>

    <TextView
        android:id="@+id/txtMinimum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/plus_jakarta_sans_medium"
        android:textSize="11sp"
        android:textColor="#A5A5A5"
        android:text="@string/minimum_change"
        app:layout_constraintStart_toStartOf="@id/txtRewards"
        app:layout_constraintTop_toBottomOf="@id/txtRewards"/>

    <TextView
        android:id="@+id/txtPoints"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:fontFamily="@font/plus_jakarta_sans_bold"
        android:textSize="12sp"
        android:textColor="@color/primaryColor"
        android:text="@string/dummy_point_reward"
        app:layout_constraintStart_toStartOf="@id/txtMinimum"
        app:layout_constraintTop_toBottomOf="@id/txtMinimum"/>
    
    <ImageView
        android:id="@+id/ic_arrow_next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_next_grey"
        android:layout_marginEnd="35dp"
        app:layout_constraintTop_toTopOf="@id/rewards_img"
        app:layout_constraintBottom_toBottomOf="@id/rewards_img"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>