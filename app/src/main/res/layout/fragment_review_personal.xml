<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:fillViewport="true"
    android:background="@color/backgroundScreen"
    tools:context=".ui.foster.form.personal.ReviewPersonalFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginBottom="50dp">

            <TextView
                android:id="@+id/txtName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="40dp"
                android:fontFamily="@font/plus_jakarta_sans_semibold"
                android:textSize="16sp"
                android:textColor="@color/blackText"
                android:text="Nama" />

            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginStart="40dp"
                android:fontFamily="@font/plus_jakarta_sans_medium"
                android:textColor="@color/blackText"
                android:text="Budi Sutejo" />

            <View
                android:id="@+id/line"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#E0E0E0"
                android:layout_marginTop="25dp"
                android:layout_marginHorizontal="40dp" />

            <TextView
                android:id="@+id/txtAge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:layout_marginStart="40dp"
                android:fontFamily="@font/plus_jakarta_sans_semibold"
                android:textSize="16sp"
                android:textColor="@color/blackText"
                android:text="Umur" />

            <TextView
                android:id="@+id/age"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginStart="40dp"
                android:fontFamily="@font/plus_jakarta_sans_regular"
                android:textColor="@color/blackText"
                android:text="20 Tahun" />


            <View
                android:id="@+id/line1"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#E0E0E0"
                android:layout_marginTop="25dp"
                android:layout_marginHorizontal="40dp" />

            <TextView
                android:id="@+id/txtPhone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:layout_marginStart="40dp"
                android:fontFamily="@font/plus_jakarta_sans_semibold"
                android:textSize="16sp"
                android:textColor="@color/blackText"
                android:text="No. Telephone" />

            <TextView
                android:id="@+id/phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginStart="40dp"
                android:fontFamily="@font/plus_jakarta_sans_regular"
                android:textColor="@color/blackText"
                android:text="085156303821" />

            <View
                android:id="@+id/line2"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#E0E0E0"
                android:layout_marginTop="25dp"
                android:layout_marginHorizontal="40dp" />

            <TextView
                android:id="@+id/txtAddress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:layout_marginStart="40dp"
                android:fontFamily="@font/plus_jakarta_sans_semibold"
                android:textSize="16sp"
                android:textColor="@color/blackText"
                android:text="Alamat (domisili)" />

            <TextView
                android:id="@+id/address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginStart="40dp"
                android:fontFamily="@font/plus_jakarta_sans_regular"
                android:textColor="@color/blackText"
                android:lineSpacingExtra="3dp"
                android:layout_marginEnd="40dp"
                android:text="Jl. Urip Sumoharjo Gg. Nusaindah Plumbon - Pandaan" />

            <View
                android:id="@+id/line3"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#E0E0E0"
                android:layout_marginTop="25dp"
                android:layout_marginHorizontal="40dp" />

            <TextView
                android:id="@+id/txtJob"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:layout_marginStart="40dp"
                android:fontFamily="@font/plus_jakarta_sans_semibold"
                android:textSize="16sp"
                android:textColor="@color/blackText"
                android:text="Pekerjaan" />

            <TextView
                android:id="@+id/job"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginStart="40dp"
                android:fontFamily="@font/plus_jakarta_sans_regular"
                android:textColor="@color/blackText"
                android:lineSpacingExtra="3dp"
                android:layout_marginEnd="40dp"
                android:text="Programmer" />

            <View
                android:id="@+id/line4"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#E0E0E0"
                android:layout_marginTop="25dp"
                android:layout_marginHorizontal="40dp" />

            <TextView
                android:id="@+id/txtRange"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:layout_marginStart="40dp"
                android:fontFamily="@font/plus_jakarta_sans_semibold"
                android:textSize="16sp"
                android:textColor="@color/blackText"
                android:text="Range Pendapatan" />

            <TextView
                android:id="@+id/range"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginStart="40dp"
                android:fontFamily="@font/plus_jakarta_sans_regular"
                android:textColor="@color/blackText"
                android:lineSpacingExtra="3dp"
                android:layout_marginEnd="40dp"
                android:text="Rp 10.000.000" />

            <View
                android:id="@+id/line5"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#E0E0E0"
                android:layout_marginTop="25dp"
                android:layout_marginHorizontal="40dp" />

            <TextView
                android:id="@+id/txtSocial"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:layout_marginStart="40dp"
                android:fontFamily="@font/plus_jakarta_sans_semibold"
                android:textSize="16sp"
                android:textColor="@color/blackText"
                android:text="Media Sosial" />

            <TextView
                android:id="@+id/social"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginStart="40dp"
                android:fontFamily="@font/plus_jakarta_sans_regular"
                android:textColor="@color/blackText"
                android:lineSpacingExtra="3dp"
                android:layout_marginEnd="40dp"
                android:text="IG: rhnalms_ | Facebook: Reihan Almas Hediawan" />

            <View
                android:id="@+id/line6"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#E0E0E0"
                android:layout_marginTop="25dp"
                android:layout_marginHorizontal="40dp" />

            <TextView
                android:id="@+id/txtCard"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:layout_marginStart="40dp"
                android:fontFamily="@font/plus_jakarta_sans_semibold"
                android:textSize="16sp"
                android:textColor="@color/blackText"
                android:text="Kartu Identitas" />

            <ImageView
                android:id="@+id/cardIdentity"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:scaleType="fitXY"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="30dp"
                app:srcCompat="@drawable/ic_place_holder"
                android:layout_marginHorizontal="40dp"/>


        </LinearLayout>

        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:indeterminate="true"
            android:indeterminateTint="@color/primary_color_foster"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:visibility="visible" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>