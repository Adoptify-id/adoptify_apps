<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="450dp"
    app:cardCornerRadius="20dp"
    android:layout_marginHorizontal="20dp"
    app:cardBackgroundColor="@color/white"
    app:cardElevation="0dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="450dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/img_session"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_gravity="center"
            android:layout_marginTop="35dp"
            android:src="@drawable/session_timeout"/>

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sesi Anda Telah Berakhir"
            android:letterSpacing="-0.03"
            android:textColor="@color/black"
            android:fontFamily="@font/plus_jakarta_sans_extra"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:textSize="20sp"/>

        <TextView
            android:id="@+id/desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/greyText"
            android:textAlignment="center"
            android:layout_marginTop="5dp"
            android:textSize="12sp"
            android:layout_marginHorizontal="30dp"
            android:text="Sesi anda telah kedaluwarsa karena ketidakaktifan anda. Jangan khawatir, cukup login lagi"
            android:fontFamily="@font/plus_jakarta_sans_medium"/>

        <Button
            android:id="@+id/btnReload"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:layout_marginHorizontal="30dp"
            android:text="Login"
            android:textSize="16sp"
            android:fontFamily="@font/plus_jakarta_sans_bold"
            android:background="@drawable/background_add_btn"/>

    </LinearLayout>
</androidx.cardview.widget.CardView>