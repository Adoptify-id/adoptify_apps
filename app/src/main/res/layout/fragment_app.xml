<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundScreen"
    android:fillViewport="true"
    android:fitsSystemWindows="true"
    android:scrollbars="none"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.about.app.AppFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/social_media"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Media Sosial Resmi"
            android:fontFamily="@font/plus_jakarta_sans_bold"
            android:textSize="16sp"
            android:textColor="@color/blackText"
            android:layout_marginTop="30dp"
            android:layout_marginStart="40dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <HorizontalScrollView
            android:id="@+id/scroll_social_media"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:scrollbars="none"
            android:layout_marginStart="40dp"
            android:layout_marginTop="25dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/social_media">
            
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/linkedin"
                    android:layout_width="95dp"
                    android:layout_height="105dp"
                    android:layout_marginEnd="15dp"
                    android:src="@drawable/linkedin"/>

                <ImageView
                    android:id="@+id/instagram"
                    android:layout_width="95dp"
                    android:layout_height="105dp"
                    android:layout_marginEnd="15dp"
                    android:src="@drawable/instagram"/>

                <ImageView
                    android:id="@+id/tiktok"
                    android:layout_width="95dp"
                    android:layout_height="105dp"
                    android:layout_marginEnd="15dp"
                    android:src="@drawable/tiktok"/>

                <ImageView
                    android:id="@+id/web"
                    android:layout_width="95dp"
                    android:layout_height="105dp"
                    android:layout_marginEnd="15dp"
                    android:src="@drawable/web"/>
            </LinearLayout>
        </HorizontalScrollView>

        <TextView
            android:id="@+id/adoptify"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/plus_jakarta_sans_bold"
            android:textSize="16sp"
            android:layout_marginTop="25dp"
            android:text="@string/app_name"
            android:textColor="@color/blackText"
            app:layout_constraintStart_toStartOf="@id/social_media"
            app:layout_constraintTop_toBottomOf="@id/scroll_social_media"/>

        <TextView
            android:id="@+id/desc_app"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="40dp"
            android:layout_marginTop="22dp"
            android:lineSpacingExtra="2dp"
            android:justificationMode="inter_word"
            android:text="Adoptify, sebuah inovasi cinta bagi hewan peliharaan, hadir dengan Penuh dedikasi untuk membawa kehangatan dan kasih sayang kepada teman setia kita. Sebagai aplikasi adopsi hewan peliharaan terdepan, Adoptify menghadirkan fitur-fitur unggulan yang memudahkan pengguna dalam menjalani perjalanan adopsi dan dukungan bagi hewan peliharaan yang membutuhkan bantuan."
            android:fontFamily="@font/plus_jakarta_sans_medium"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/adoptify"/>
        
        <ImageView
            android:id="@+id/image_adoptify"
            android:layout_width="340dp"
            android:layout_height="340dp"
            android:layout_marginTop="22dp"
            android:elevation="20dp"
            android:layout_marginHorizontal="45dp"
            android:src="@drawable/lepas_sambut"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/desc_app"/>

        <TextView
            android:id="@+id/latar_belakang"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/plus_jakarta_sans_bold"
            android:textSize="16sp"
            android:layout_marginTop="20dp"
            android:text="Background"
            android:textColor="@color/blackText"
            app:layout_constraintStart_toStartOf="@id/social_media"
            app:layout_constraintTop_toBottomOf="@id/image_adoptify"/>

        <TextView
            android:id="@+id/desc_app_2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="40dp"
            android:layout_marginTop="22dp"
            android:lineSpacingExtra="2dp"
            android:justificationMode="inter_word"
            android:text="Kami telah melakukan survei mendalam terhadap lebih dari 100 pecinta hewan di sekitar Malang. Hasil survei ini menunjukkan bahwa sekitar 90,1% dari responden menyatakan bahwa aplikasi adopsi hewan merupakan solusi yang sangat efektif untuk mempromosikan adopsi hewan peliharaan. Mereka percaya bahwa melalui aplikasi ini, hewan peliharaan dapat lebih mudah menemukan rumah yang layak dibandingkan dengan membeli hewan dari penjual atau toko hewan peliharaan."
            android:fontFamily="@font/plus_jakarta_sans_medium"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/latar_belakang"/>

        <ImageView
            android:id="@+id/image_bangkit"
            android:layout_width="260dp"
            android:layout_height="235dp"
            android:src="@drawable/bangkit_new"
            android:layout_marginTop="35dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/desc_app_2"/>

        <TextView
            android:id="@+id/desc_app_3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="40dp"
            android:layout_marginTop="22dp"
            android:lineSpacingExtra="2dp"
            android:justificationMode="inter_word"
            android:text="Mayoritas responden merasa bahwa adopsi hewan melalui aplikasi memungkinkan proses yang lebih transparan dan terpercaya. Selain itu, aplikasi adopsi hewan juga membantu meningkatkan kesadaran tentang pentingnya memberikan rumah bagi hewan-hewan yang membutuhkan, serta mengurangi jumlah hewan yang terlantar atau tidak terurus."
            android:fontFamily="@font/plus_jakarta_sans_medium"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/image_bangkit"/>


        <TextView
            android:id="@+id/copyright"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="40dp"
            android:layout_marginTop="22dp"
            android:layout_marginBottom="20dp"
            android:textSize="12sp"
            android:text="Â©2023 All rights reserved - Adoptify"
            android:fontFamily="@font/plus_jakarta_sans_regular"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/desc_app_3"
           app:layout_constraintBottom_toBottomOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>