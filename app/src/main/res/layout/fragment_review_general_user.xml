<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:fillViewport="true"
    android:background="@color/backgroundScreen"
    tools:context=".ui.adopt.review.general.ReviewGeneralUserFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="50dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <TextView
                android:id="@+id/txtReason"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="40dp"
                android:fontFamily="@font/plus_jakarta_sans_semibold"
                android:textSize="16sp"
                android:textColor="@color/blackText"
                android:text="Apa alasan kamu ingin mengadopsi?" />

            <TextView
                android:id="@+id/reason"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginStart="40dp"
                android:layout_marginEnd="40dp"
                android:fontFamily="@font/plus_jakarta_sans_medium"
                android:textColor="@color/blackText"
                android:text="Karena aku sayang kucing dan aku merupakan penyayang kucing" />

            <View
                android:id="@+id/line"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#E0E0E0"
                android:layout_marginTop="25dp"
                android:layout_marginHorizontal="40dp" />

            <TextView
                android:id="@+id/txtHope"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:layout_marginStart="40dp"
                android:layout_marginEnd="40dp"
                android:fontFamily="@font/plus_jakarta_sans_semibold"
                android:textSize="16sp"
                android:textColor="@color/blackText"
                android:text="Bagaimana jika kucing yang diadopsi tidak sesuai dengan harapan?" />

            <TextView
                android:id="@+id/hope"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginStart="40dp"
                android:layout_marginEnd="40dp"
                android:fontFamily="@font/plus_jakarta_sans_regular"
                android:textColor="@color/blackText"
                android:text="Saya tidak peduli, karena itu sudah merupakan konsekuensi" />


            <View
                android:id="@+id/line1"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#E0E0E0"
                android:layout_marginTop="25dp"
                android:layout_marginHorizontal="40dp" />

            <TextView
                android:id="@+id/txtExperience"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:layout_marginStart="40dp"
                android:layout_marginEnd="40dp"
                android:fontFamily="@font/plus_jakarta_sans_semibold"
                android:textSize="16sp"
                android:textColor="@color/blackText"
                android:text="Apakah anda sedang/pernah memeliharakucing sebelumnya?" />

            <TextView
                android:id="@+id/experience"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginStart="40dp"
                android:layout_marginEnd="40dp"
                android:fontFamily="@font/plus_jakarta_sans_regular"
                android:textColor="@color/blackText"
                android:text="Pernah, saat masih kecil ibu saya membelikannya di splendid" />

            <View
                android:id="@+id/line2"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#E0E0E0"
                android:layout_marginTop="25dp"
                android:layout_marginHorizontal="40dp" />

            <TextView
                android:id="@+id/txtBesides"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:layout_marginStart="40dp"
                android:layout_marginEnd="40dp"
                android:fontFamily="@font/plus_jakarta_sans_semibold"
                android:textSize="16sp"
                android:textColor="@color/blackText"
                android:text="Apakah anda mempunyai hewan peliharaan selain kucing?" />

            <TextView
                android:id="@+id/besides"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginStart="40dp"
                android:fontFamily="@font/plus_jakarta_sans_regular"
                android:textColor="@color/blackText"
                android:lineSpacingExtra="3dp"
                android:layout_marginEnd="40dp"
                android:text="Iya, saya punya anjing juga yang merupakan peliharaan sejak kecil" />

            <View
                android:id="@+id/line3"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#E0E0E0"
                android:layout_marginTop="25dp"
                android:layout_marginHorizontal="40dp" />

            <TextView
                android:id="@+id/txtVaccine"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:layout_marginStart="40dp"
                android:layout_marginEnd="40dp"
                android:fontFamily="@font/plus_jakarta_sans_semibold"
                android:textSize="16sp"
                android:textColor="@color/blackText"
                android:text="Jika anda sedang merawat kucing, apakah kucing tersebut sudah di vaksin?" />

            <TextView
                android:id="@+id/vaccine"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginStart="40dp"
                android:fontFamily="@font/plus_jakarta_sans_regular"
                android:textColor="@color/blackText"
                android:lineSpacingExtra="3dp"
                android:layout_marginEnd="40dp"
                android:text="Sudah pastinya, selalu saya berikan vaksin sesuai dengan waktunya" />

            <View
                android:id="@+id/line4"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#E0E0E0"
                android:layout_marginTop="25dp"
                android:layout_marginHorizontal="40dp" />

            <TextView
                android:id="@+id/txtSterile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:layout_marginStart="40dp"
                android:layout_marginEnd="40dp"
                android:fontFamily="@font/plus_jakarta_sans_semibold"
                android:textSize="16sp"
                android:textColor="@color/blackText"
                android:text="Jika calon adopter sedang merawat kucing, apakah kucing tersebut sudah di steril/kebiri?" />

            <TextView
                android:id="@+id/sterile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginStart="40dp"
                android:fontFamily="@font/plus_jakarta_sans_regular"
                android:textColor="@color/blackText"
                android:lineSpacingExtra="3dp"
                android:layout_marginEnd="40dp"
                android:text="Sudah pastinya" />

            <View
                android:id="@+id/line5"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#E0E0E0"
                android:layout_marginTop="25dp"
                android:layout_marginHorizontal="40dp" />

            <TextView
                android:id="@+id/txtFood"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:layout_marginStart="40dp"
                android:layout_marginEnd="40dp"
                android:fontFamily="@font/plus_jakarta_sans_semibold"
                android:textSize="16sp"
                android:textColor="@color/blackText"
                android:text="Jenis makanan hewan apa yang akan kamu berikan (Dry/Wet/Raw)?" />

            <TextView
                android:id="@+id/food"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginStart="40dp"
                android:fontFamily="@font/plus_jakarta_sans_regular"
                android:textColor="@color/blackText"
                android:lineSpacingExtra="3dp"
                android:layout_marginEnd="40dp"
                android:text="Saya sering memberikan makanan yang bergantian kadang dry, wet dan raw" />

            <View
                android:id="@+id/line6"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#E0E0E0"
                android:layout_marginTop="25dp"
                android:layout_marginHorizontal="40dp" />

            <TextView
                android:id="@+id/txtMerk"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:layout_marginStart="40dp"
                android:layout_marginEnd="40dp"
                android:fontFamily="@font/plus_jakarta_sans_semibold"
                android:textSize="16sp"
                android:textColor="@color/blackText"
                android:text="Merk apa yang akan kamu pilih sebagai makanan kucing?" />

            <TextView
                android:id="@+id/merk"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginStart="40dp"
                android:fontFamily="@font/plus_jakarta_sans_regular"
                android:textColor="@color/blackText"
                android:lineSpacingExtra="3dp"
                android:layout_marginEnd="40dp"
                android:text="Saya sering memberikan makanan dengan merk Whiskas" />

            <View
                android:id="@+id/line7"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#E0E0E0"
                android:layout_marginTop="25dp"
                android:layout_marginHorizontal="40dp" />

            <TextView
                android:id="@+id/txtDrink"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:layout_marginStart="40dp"
                android:layout_marginEnd="40dp"
                android:fontFamily="@font/plus_jakarta_sans_semibold"
                android:textSize="16sp"
                android:textColor="@color/blackText"
                android:text="Bersediakah kamu memberikan air minum yang matang pada kucing?" />

            <TextView
                android:id="@+id/drink"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginStart="40dp"
                android:fontFamily="@font/plus_jakarta_sans_regular"
                android:textColor="@color/blackText"
                android:lineSpacingExtra="3dp"
                android:layout_marginEnd="40dp"
                android:text="Saya sangat bersedia sekali karena saya sangat menjaga kucing saya" />

            <View
                android:id="@+id/line8"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#E0E0E0"
                android:layout_marginTop="25dp"
                android:layout_marginHorizontal="40dp" />

            <TextView
                android:id="@+id/txtCage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:layout_marginStart="40dp"
                android:layout_marginEnd="40dp"
                android:fontFamily="@font/plus_jakarta_sans_semibold"
                android:textSize="16sp"
                android:textColor="@color/blackText"
                android:text="Apakah kamu berencana untuk memasukkan kucing ke dalam kandang?" />

            <TextView
                android:id="@+id/cage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginStart="40dp"
                android:fontFamily="@font/plus_jakarta_sans_regular"
                android:textColor="@color/blackText"
                android:lineSpacingExtra="3dp"
                android:layout_marginEnd="40dp"
                android:layout_marginBottom="30dp"
                android:text="Tidak, kucing bebas bergerak atau beraktivitas di dalam rumah sepanjang hari." />

        </LinearLayout>

        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:indeterminate="true"
            android:indeterminateTint="@color/primaryColor"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:visibility="visible" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>