<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/backgroundScreen"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:id="@+id/card_ktp"
        android:layout_width="match_parent"
        android:layout_height="92dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:cardElevation="5dp"
        app:cardCornerRadius="20dp"
        android:layout_marginHorizontal="30dp"
        app:cardBackgroundColor="@color/white">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/ic_upload"
                android:layout_width="57dp"
                android:layout_height="57dp"
                android:layout_marginStart="20dp"
                android:src="@drawable/detail_ktp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

            <TextView
                android:id="@+id/txtUpload"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/plus_jakarta_sans_bold"
                android:textColor="@color/blackText"
                android:textSize="18sp"
                android:layout_marginTop="20dp"
                android:layout_marginStart="32dp"
                android:text="@string/card_identity"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toEndOf="@+id/ic_upload" />

            <TextView
                android:id="@+id/descUpload"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/plus_jakarta_sans_medium"
                android:textColor="#A5A5A5"
                android:textSize="11sp"
                android:layout_marginTop="5dp"
                android:text="Dokumen identitas pribadi"
                app:layout_constraintTop_toBottomOf="@id/txtUpload"
                app:layout_constraintStart_toStartOf="@id/txtUpload"/>

            <ImageView
                android:id="@+id/successUpload"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="20dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/ic_upload"
                app:layout_constraintBottom_toBottomOf="@id/ic_upload"
                android:src="@drawable/custom_radio_selected"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/card_formulir"
        android:layout_width="match_parent"
        android:layout_height="92dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp"
        android:layout_marginHorizontal="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:cardElevation="5dp"
        app:cardCornerRadius="20dp"
        app:cardBackgroundColor="@color/white">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/ic_formulir"
                android:layout_width="57dp"
                android:layout_height="57dp"
                android:layout_marginStart="20dp"
                android:src="@drawable/detail_formulir"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/txtFormulir"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/plus_jakarta_sans_bold"
                android:text="Formulir"
                android:textColor="@color/blackText"
                android:textSize="18sp"
                app:layout_constraintStart_toEndOf="@+id/ic_formulir"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/descFormulir"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/plus_jakarta_sans_medium"
                android:text="Formulir pengajuan adopsi"
                android:textColor="#A5A5A5"
                android:textSize="11sp"
                app:layout_constraintStart_toStartOf="@id/txtFormulir"
                app:layout_constraintTop_toBottomOf="@id/txtFormulir" />

            <ImageView
                android:id="@+id/successFormulir"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="20dp"
                android:src="@drawable/custom_radio_selected"
                app:layout_constraintBottom_toBottomOf="@id/txtFormulir"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/txtFormulir" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/card_komitmen"
        android:layout_width="match_parent"
        android:layout_height="92dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:cardElevation="5dp"
        app:cardCornerRadius="20dp"
        android:visibility="gone"
        tools:visibility="visible"
        android:layout_marginHorizontal="30dp"
        app:cardBackgroundColor="@color/white">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/ic_surat"
                android:layout_width="57dp"
                android:layout_height="57dp"
                android:layout_marginStart="20dp"
                android:src="@drawable/detail_ktp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/txtSurat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/plus_jakarta_sans_bold"
                android:text="Surat Komitmen"
                android:textColor="@color/blackText"
                android:textSize="18sp"
                app:layout_constraintStart_toEndOf="@+id/ic_surat"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/descSurat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/plus_jakarta_sans_medium"
                android:text="Surat komitmen adopsi"
                android:textColor="#A5A5A5"
                android:textSize="11sp"
                app:layout_constraintStart_toStartOf="@id/txtSurat"
                app:layout_constraintTop_toBottomOf="@id/txtSurat" />

            <ImageView
                android:id="@+id/successUploadSurat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="20dp"
                android:src="@drawable/custom_radio_selected"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="@id/ic_surat"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/ic_surat" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/card_transfer"
        android:layout_width="match_parent"
        android:layout_height="92dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:cardElevation="5dp"
        app:cardCornerRadius="20dp"
        android:visibility="gone"
        tools:visibility="visible"
        android:layout_marginHorizontal="30dp"
        app:cardBackgroundColor="@color/white">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/ic_transfer"
                android:layout_width="57dp"
                android:layout_height="57dp"
                android:layout_marginStart="20dp"
                android:src="@drawable/detail_ktp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

            <TextView
                android:id="@+id/txtTransfer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/plus_jakarta_sans_bold"
                android:textColor="@color/blackText"
                android:textSize="18sp"
                android:layout_marginTop="20dp"
                android:layout_marginStart="32dp"
                android:text="Bukti Transaksi"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toEndOf="@+id/ic_transfer" />

            <TextView
                android:id="@+id/descTransfer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/plus_jakarta_sans_medium"
                android:textColor="#A5A5A5"
                android:textSize="11sp"
                android:layout_marginTop="5dp"
                android:text="Bukti transaksi adopsi"
                app:layout_constraintTop_toBottomOf="@id/txtTransfer"
                app:layout_constraintStart_toStartOf="@id/txtTransfer"/>

            <ImageView
                android:id="@+id/successUploadTransfer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="20dp"
                android:visibility="gone"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/ic_transfer"
                app:layout_constraintBottom_toBottomOf="@id/ic_transfer"
                android:src="@drawable/custom_radio_selected"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>