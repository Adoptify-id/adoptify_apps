<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Adoptify_core" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <item name="colorPrimary">@color/primaryColor</item>
    </style>

    <style name="Theme.Adoptify_core" parent="Base.Theme.Adoptify_core" />

    <style name="TextAppearance.App.LabelLarge" parent="TextAppearance.Material3.LabelLarge">
        <item name="fontFamily">@font/plus_jakarta_sans_bold</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="DetailPetImageView" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeBottomLeft">20dp</item>
        <item name="cornerSizeBottomRight">20dp</item>
    </style>

    <style name="AddedImageVirtualPet" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">15dp</item>
    </style>

    <style name="AlertDialog" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:windowBackground">@drawable/bg_alert_dialog</item>
        <item name="android:windowIsFloating">true</item>
        <item name="windowMinWidthMajor">70%</item>
        <item name="windowMinWidthMinor">70%</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>
</resources>